<p id="notice"><%= notice %></p>

<h1>Time Tables</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Bookingdate</th>
      <th>Bookingtime</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Totalpayment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_tables.each do |time_table| %>
      <tr>
        <td><%= time_table.bookingDate %></td>
        <td><%= time_table.bookingTime %></td>
        <td><%= time_table.startDate %></td>
        <td><%= time_table.endDate %></td>
        <td><%= time_table.totalPayment %></td>
        <td><%= link_to 'Show', time_table %></td>
        <td><%= link_to 'Edit', edit_time_table_path(time_table) %></td>
        <td><%= link_to 'Destroy', time_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


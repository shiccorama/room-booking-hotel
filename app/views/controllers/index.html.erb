<p id="notice"><%= notice %></p>

<h1>Controllers</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Payments</th>
      <th>Customer</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Cash</th>
      <th>Visa</th>
      <th>Card number</th>
      <th>Business trip</th>
      <th>Leisure trip</th>
      <th>Boolean</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controllers.each do |controller| %>
      <tr>
        <td><%= controller.payments %></td>
        <td><%= controller.customer %></td>
        <td><%= controller.name %></td>
        <td><%= controller.phone %></td>
        <td><%= controller.email %></td>
        <td><%= controller.cash %></td>
        <td><%= controller.visa %></td>
        <td><%= controller.card_number %></td>
        <td><%= controller.business_trip %></td>
        <td><%= controller.leisure_trip %></td>
        <td><%= controller.boolean %></td>
        <td><%= link_to 'Show', controller %></td>
        <td><%= link_to 'Edit', edit_controller_path(controller) %></td>
        <td><%= link_to 'Destroy', controller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

